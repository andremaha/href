{% extends 'HrefShortyBundle::layout.html.twig' %}

{% block main %}

    <article class="hero-unit">
        <h1>Generate new URL</h1>

            <form action="{{ path('url_new') }}" method="post" class="url_form" {{ form_enctype(form) }}>
                <p>
                    {{ form_errors(form.original) }}
                    {{ form_widget(form.original) }}
                </p>

                {{ form_rest(form) }}
                <button type="submit" class="btn btn-primary btn-large">Continue</button>
            </form>
    </article>


    <section class="raw-fluid">
            <article class="span6">
                <header>
                    <h3>Top 10 Domains</h3>
                </header>
                <section>
                    <ol>
                        {% for domain in top_domains %}
                            <li>{{ domain.name }}</li>
                        {% endfor %}
                    </ol>
                </section>
            </article>
            <article class="span6">
                <header>
                    <h3>Top 10 TLDs</h3>
                </header>
                <section>
                    <ol>
                        {% for tld in top_tlds %}
                            <li>{{ tld.name }}</li>
                        {% endfor %}
                    </ol>
                </section>
            </article>
    </section>
{% endblock %}